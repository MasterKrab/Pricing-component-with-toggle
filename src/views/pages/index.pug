      link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap", rel="stylesheet")
   body
      header.main-header
         h1.title Our Pricing
      main.plans
            form.plans__form(action="#")
               label.plans__label-screen-reader(for="duration") Annualy or Monthly?
               label.plans__label(for="duration", aria-hidden="true") Annualy
               input.plans__checkbox#duration(name="duration", type="checkbox", checked)
               label.plans__label(for="duration", aria-hidden="true") Monthly
            .plans__cards
               section.card
                     h2.card__title Basic
                     p.card__price
                        |&dollar;
                        span.card__number
                     ul.card__list 
                        li.card__item 500 GB Storage
                        li.card__item 2 Users Allowed
                        li.card__item Send up to 3 GB
                     a.card__link(href="#") Learn More
               section.card.card--blue
                     h2.card__title Professional
                     p.card__price.card__price--white
                        |&dollar;
                        span.card__number
                     ul.card__list 
                        li.card__item.card__item--light 1 TB Storage
                        li.card__item.card__item--light 5 Users Allowed
                        li.card__item.card__item--light Send up to 10 GB
                     a.card__link.card__link--white(href="#") Learn More
               section.card
                     h2.card__title Master
                     p.card__price
                        |&dollar;
                        span.card__number
                     ul.card__list 
                        li.card__item 2 TB Storage
                        li.card__item 10 Users Allowed
                        li.card__item Send up to 20 GB
                     a.card__link(href="#") Learn More
      script(src="js/scripts-min.js") 